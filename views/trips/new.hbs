<div class="landing">
    <h1>Add a Point of Interest</h1>

    <form action="/trips" method="POST">
        <p>
            <label for="location">City*:</label>
            <input required type="text" name="location" width="500px">
        </p>
        <p>
            <label for="name">Name*:</label>
            <input required type="text" name="name" width="500px">
        </p>
        <p>
            <label for="website">Website:</label>
            <input type="text" name="website" width="500px">
        </p>
        <p>
            <label for="notes">Notes:</label>
            <input type="text" name="notes" width="500px">
        </p>
        <div>
            <input type="radio" name="type" value="Brewery">
            <label>Brewery</label>

            <input type="radio" name="type" value="Cafe">
            <label>Cafe</label>

            <input type="radio" name="type" value="Place to See">
            <label>Place to See</label>
            <br>
            <input type="radio" name="type" value="Restaurant">
            <label>Restaurant</label>

            <input type="radio" name="type" value="Thing to Do">
            <label>Thing to Do</label>
            <br>
        </div>
        </br>
        <input type="submit" value="Add">
    </form>
    <br>
    <br>
    <a class="home" href="/trips">‚üµ Index</a>
</div>